<table class="table table-hover" id="users">
  <tr>
    <th></th>
    <th>Email</th>
    <th>Registration</th>
    <th>Last login</th>
    <th>Roles</th>
  </tr>
  
  <% @users.each do |user| %>
  <tr>
    <td>
      <% if user.avatar.file? %>
        <%= image_tag user.avatar.url(:thumb) %>
      <% end %>   
    </td>
    <td><%= user.email %></td>
    <td><%= user.created_at %></td>
    <td><%= user.last_sign_in_at %></td>
    <td>
      <% user.roles.each do |role| %>
        <%= role.name %>
      <% end %>
    </td>
  </tr>
  <% end %>
  
</table>
